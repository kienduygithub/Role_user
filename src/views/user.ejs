<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    td form button.btn{
        min-width: 80px;
    }
</style>
<body>
    <div class="user-info-container">
        <div class="container">
            <div class="row">
                <form action="/user/create-user" method="POST">
                    <div class="col-12 mt-3">
                        <h3>Create a new user: </h3>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-6 pb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
                <div class="table-users mt-3">
                    <h3>Table users: </h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">Username</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- <%for(let i = 0;i < users.length;i++){%>
                                <tr>
                                    <th scope="row"><%=i+1%></th>
                                    <td><%=users[i].email%></td>
                                    <td><%=users[i].username%></td>
                                    <td>
                                        <button class="btn btn-warning">Edit</button>
                                        <button class="btn btn-danger">Delete</button>
                                    </td>
                                </tr>
                            <%}%> -->
                            <%users.forEach((item, index) => {%>
                                <tr class="align-middle">
                                    <th scope="row" class="text-center"><%=index+1%></th>
                                    <td><%=item.email%></td>
                                    <td><%=item.username%></td>
                                    <td class="d-flex flex-row align-item-center gap-1">
                                        <form class="mb-0" action="/user/edit-user/<%=item.id%>" method="GET">
                                            <button type="submit" class="btn btn-warning">Edit</button>
                                        </form>
                                        <form class="mb-0" action="/user/delete-user" method="POST">
                                            <input name="userId" value="<%=item.id%>" hidden/>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>