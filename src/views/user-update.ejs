<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit user</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    td form button.btn{
        min-width: 80px;
    }
</style>
<body>
    <div class="edit-user-container">
        <div class="container">
            <div class="row">
                <form action="/user/update-user" method="POST">
                    <div class="col-12 mt-3">
                        <h3>Update a user: </h3>
                    </div>
                    <input name="userId" value="<%=user.id%>" hidden/>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input value="<%=user.email%>" type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" required>
                    </div>
                    <div class="col-6 pb-3">
                        <label for="username" class="form-label">Username</label>
                        <input value="<%=user.username%>" type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>